#!name = 财新去广告
#!desc = 过滤财新广告
#!icon = https://gitlab.com/lodepuly/iconlibrary/-/raw/main/App_icon/120px/CaixinMedia.png

[Rewrite]
^https:\/\/entities\.caixin\.com\/api\/(dataplus\/promotionHints|public\/push\/appIndex|public\/recommendNews) reject-dict
^https:\/\/gateway\.caixin\.com\/api\/app-api\/cxAdInfo\/selectIndexAdInfo reject-dict
^https:\/\/mappsv5\.caixin\.com\/channelv5\/article_ad_ios_info\.json reject-dict
^https:\/\/gg\.caixin\.com\/s\?z=caixin&slot=\d+ reject-dict
^https:\/\/msgapi\.caixin\.com\/msg_api\/annmsg\/annlist reject-dict

[Script]
http-response ^https:\/\/entities\.caixin\.com\/api\/dataplus\/columns script-path = https://raw.githubusercontent.com/Auniquesir/Tool/X/Loon/Script/CaixinMedia/CaixinMedia_remove_ads.js, requires-body = true, tag = 移除财新数据通广告
http-response ^https:\/\/gateway\.caixin\.com\/api\/app-api\/(caixinapp\/appinfo|search\/getkeyword) script-path = https://raw.githubusercontent.com/Auniquesir/Tool/X/Loon/Script/CaixinMedia/CaixinMedia_remove_ads.js, requires-body = true, tag = 移除文末广告
http-response ^https:\/\/gateway\.caixin\.com\/api\/app-content\/fm\/index\/list\? script-path = https://raw.githubusercontent.com/Auniquesir/Tool/X/Loon/Script/CaixinMedia/CaixinMedia_remove_ads.js, requires-body = true, tag = 移除财新FM广告
http-response ^https:\/\/gg\.caixin\.com\/s\?z=caixin&op=\d script-path = https://raw.githubusercontent.com/Auniquesir/Tool/X/Loon/Script/CaixinMedia/CaixinMedia_remove_ads.js, requires-body = true, tag = 移除开屏广告
http-response ^https:\/\/mappsv5\.caixin\.com\/articlev5\/\d+\/\d+\.json$ script-path = https://raw.githubusercontent.com/Auniquesir/Tool/X/Loon/Script/CaixinMedia/CaixinMedia_remove_ads.js, requires-body = true, tag = 移除正文广告
http-response ^https:\/\/mapps?v5\.caixin\.com\/(channelv5\/list|\/?index_page_v5\/)\w+ script-path = https://raw.githubusercontent.com/Auniquesir/Tool/X/Loon/Script/CaixinMedia/CaixinMedia_remove_ads.js, requires-body = true, tag = 移除正文广告

[MitM]
hostname = e*.caixin.com, g*.caixin.com, m*.caixin.com
